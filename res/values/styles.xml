<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="WidgetHeading" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#9b9ca3</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="WidgetHeading1" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="Carbon.Theme.Dark" parent="@android:style/Theme.Holo">
        <item name="android:windowBackground">@drawable/bgaa</item>
        <item name="android:actionBarStyle">@style/Carbon.Dark.ActionBar</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <style name="Carbon.Dark.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/tweet_avatar_overlay</item>
    </style>

    <style name="WidgetConfigTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#B6B6BB</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:typeface">sans</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="CustomSpinner" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_holo_dark</item>
        <item name="android:clickable">true</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_dark</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_holo_dark</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:spinnerItemStyle">@style/SpinnerTextViewStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownTextStyle</item>
    </style>

    <style name="SpinnerTextViewStyle" parent="@android:style/Widget.Holo.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SpinnerDropDownTextStyle" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SpinnerAppTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="SpinnerAppTheme.DropDown">
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="SpinnerDropDownItemAppTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/btn_radio_holo_light</item>
    </style>

</resources>